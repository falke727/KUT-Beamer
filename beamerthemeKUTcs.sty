\ProvidesPackage{beamerthemeKUTcs}[03/05/2022]
\def\beamerKUTcs@version{0.01}

\mode<presentation>

\newif\ifbeamer@nonav
\newif\ifbeamer@nologo
\newif\ifbeamer@simplefoot
\newif\ifbeamer@jp
\newif\ifbeamer@tflogo

\beamer@nonavfalse
\beamer@nologofalse
\beamer@simplefootfalse
\beamer@jpfalse
\beamer@tflogofalse

\DeclareOptionBeamer{nonav}{\beamer@nonavtrue}
\DeclareOptionBeamer{nologo}{\beamer@nologotrue}
\DeclareOptionBeamer{simplefoot}{\beamer@simplefoottrue}
\DeclareOptionBeamer{jp}{\beamer@jptrue}
\DeclareOptionBeamer{tflogo}{\beamer@tflogotrue}

\ProcessOptionsBeamer
\useinnertheme{rounded}
\usecolortheme{kochi}
\useoutertheme{KUTcs}
\usefonttheme{KUT}

\ifbeamer@nonav
  \setbeamertemplate{navigation symbols}{}
\fi

\ifbeamer@simplefoot
  \setbeamerfont{page number in head/foot}{family=\ttfamily,size=\tiny}
  \setbeamertemplate{footline}[frame number]
\fi

\ifbeamer@jp
  \renewcommand{\figurename}{図}
  \renewcommand{\tablename}{表}
\fi


\setbeamerfont{block title}{size={}}

\defbeamertemplate*{title page}{customized}[1][]
{
   \begin{beamercolorbox}[rounded=true,sep=4pt]{palette primary}
    \centering
    \usebeamerfont{title}\inserttitle\par
    \vspace{4pt}
    \usebeamerfont{subtitle}\insertsubtitle\par
   \end{beamercolorbox}
   \bigskip
   \begin{center}
    \usebeamerfont{author}\insertauthor\par
    \vspace{6pt}
    \usebeamerfont{institute}\insertinstitute\par
    \vspace{12pt}    
    \usebeamerfont{institute}\inserttitlegraphic
    \ifbeamer@tflogo
    \hspace{2pt}
    \pgfuseimage{logomarktf}
    \fi
    \par
    \vspace{8pt}   
    \usebeamerfont{date}\insertdate\par
   \end{center} 
}

\setbeamertemplate{items}[square]
\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamertemplate{caption}[numbered]
\setbeamertemplate{itemize item}[circle]
\setbeamertemplate{itemize subitem}[default]
\setbeamertemplate{itemize subsubitem}[square]
\setbeamertemplate{blocks}[rounded][shadow = false]
\setbeamertemplate{section in toc}[square]

\mode
<all>
